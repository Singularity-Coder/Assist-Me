<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_right_handle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="-6dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_right_handle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/md_deep_orange_50" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_right_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="-12dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/md_deep_orange_50"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintEnd_toStartOf="@+id/iv_right_handle"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                    <TextView
                        android:id="@+id/tv_right_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxWidth="224dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:text="Hey hey I am dummy robot bla bla bla Hey hey I am dummy robot bla bla bla "
                        android:textColor="@color/md_deep_orange_dark"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

